@using Quizleter.ViewModels
@model EditLearnsetViewModel

@{
    ViewData["Title"] = "Lernset bearbeiten";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" hidden />
            <div class="form-group">
                <input asp-for="Name" placeholder="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Desc" placeholder="Beschreibung" class="form-control" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100"><i class="fa-solid fa-trash"></i></a>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Index" class="btn btn-secondary w-100">Abbrechen</a>
                    </div>
                    <div class="col-md-6">
                        <input type="submit" value="Bestätigen" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
