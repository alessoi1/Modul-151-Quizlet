@model Quizleter.Models.Learnset

@{
    ViewData["Title"] = "Delete";
}

<h1>Lernset löschen</h1>

<div>
    <p>Bist du dir sicher, dass du dieses Lernset löschen möchtest?</p>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="btn-group w-100" role="group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Löschen" class="btn btn-danger" style="width: 20px;" />
            <a class="btn btn-secondary" asp-action="Index">Abbrechen</a>
        </div>
    </form>
</div>
