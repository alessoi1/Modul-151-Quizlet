@model Quizleter.ViewModels.UserDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Dein Account</h1>

<div>
    <h4>@Model.Email</h4>
    <hr />
    <h4>Deine Lernsets</h4>
    <dl class="row">
        @foreach (var learnset in Model.Learnsets)
        {
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @learnset.Name
            </dd>
        }
    </dl>
</div>
