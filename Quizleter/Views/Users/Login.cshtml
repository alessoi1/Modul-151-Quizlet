@model Quizleter.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <section>
            <form asp-action="Login" id="account" method="post">
                <h1>@ViewData["Title"]</h1>
                <img src="~/img/logo-wide-transparent.png" class="form-image" />
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Username" placeholder="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" placeholder="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </div>
                <div class="form-group">
                    <a asp-action="Register" class="btn btn-secondary w-100">New to Quizleter? Create an account</a>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-2"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}